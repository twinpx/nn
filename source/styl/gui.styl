@font-face {
 font-family: "font";
 src: url("./fonts/font.ttf") format("ttf"),
      url("./fonts/font.woff") format("woff");
}

.container

  @media only screen and (min-width: 993px)
    width 90% !important
    
  @media print
    width auto !important
    min-width 0
    max-width auto

body
  background #fff
  color $text-color
  font-family $font-roboto
  font-size 18px
  text-align justify
  
a
  transition( opacity .2s ease )
  color #245ba7
  
  &:hover
    opacity .3
    
h1  
  overflow visible
  height auto
  font-family "font", Georgia

  &.i-ph-animated
    color #000
    
    &:after
      background-color transparent
      width auto
      opacity 0
      z-index 0
    
  @media( max-width 600px )
    font-size 16pt
  
h2
  font-size 14pt
  
h3
  font-family $font-roboto
  font-size 24px

.b-h6
  color $text-lightcolor
  font-size 8pt
  
hr
  border none
  margin 0
  padding 10px 0
  
  //5px
  &.i-size-XS
    padding 2px 0 3px
  
  //10px
  &.i-size-S
    padding 5px 0
    
  //15px
  &.i-size-M
    padding 7px 0 8px
    
  //20px
  &
    padding 10px 0
    
  //40px
  &.i-size-L
    padding 20px 0
    
  //60px
  &.i-size-XL
    padding 30px 0
    
.i-hide-on-xlarge-only

  @media( min-width 1201px )
    display none
    
.btn, .btn-large, .btn-small
  font-size: 7pt;
  text-transform: uppercase;
  color: #fff;
  background-color: $brand-color;
  box-shadow: none;
  border-radius: 0;
  transition( opacity .2s ease-out )
  white-space nowrap
  
  &:hover
    box-shadow none
    background-color $brand-color
    opacity .7
  
.b-button
  display inline-block
  background-color $brand-color
  color #fff
  border-radius 4px
  padding 0 30px
  line-height 65px
  font-size 13px
  font-family $font-roboto
  font-weight 700
  text-align center
  text-transform uppercase
  white-space nowrap
  border none
  transition( opacity .5s ease )
  cursor pointer
  max-width 100%
  
  &:hover
    opacity .7
    
  button&:focus
    background-color $brand-color
  
.row
  margin-bottom 0
  margin-right -15px
  margin-left -15px
  padding 20px 0
  
  @media( max-width 600px )
    padding 0
  
  .col
    padding-right 15px
    padding-left 15px
    
    @media only screen and ( min-width 1201px )
    
      &.xl6
        width 50%
        margin-left auto
        left auto
        right auto
        
@media only screen and ( min-width 1201px )

  .hide-on-xlarge-only
    display none !important
  
.text-center
  text-align center
  
.text-right
  text-align right
  
.text-left
  text-align left
  
[type="checkbox"]:checked+span:not(.lever):before
  border-right-color $brand-color-2
  border-bottom-color $brand-color-2
  
ul.browser-default
  
  li
    margin-bottom 7px
  
#advantages
  display block

  img
    max-width 100px
    display block
    margin 0 auto

  p
    text-align center
    word-break break-word
    
