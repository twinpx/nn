#description
  display block
    
  @media( min-width 601px )
  
    .col
      padding 0 55px
    
blockquote
  background #255aa7
  padding 40px
  margin 0 -40px
  font-family $font-roboto
  font-size 18px
  line-height 1.5
  border 0
  color #fff
  
  @media( max-width 600px )
    margin 0
    padding 30px
    font-size 20px
        
#ymapPH
  padding-top 100%
  background-color pink
  
#planText
  position relative
    
.i-ph-animated
  
  .b-plan-text-ph
    position absolute
    top 0
    left 0
    opacity 0
    z-index 1
  
  .b-plan-text
    position static
    opacity 1
  
.b-plan-text
  position static
  opacity 1  
    
  &__tel
    font-size 26px
    text-align right
    padding-top 10px
    
    @media( max-width 1200px )
      text-align left
    
  .b-button
    padding 0 25px
    
.b-label
  display inline-block
  vertical-align top
  padding 10px 20px
  border-radius 5px
  background-color #f2f2f2
  font-size 12pt
  
.b-heading-icon
  display flex
  justify-content space-between
  align-items flex-start
  
  @media( max-width 600px )
    display block
