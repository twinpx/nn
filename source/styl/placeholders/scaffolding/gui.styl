body
  margin 0
  
h1
  font-size 35px
  font-weight 300
  line-height 40px
  height 40px
  position relative
  margin 23px 0 !important
  color #fff
  overflow hidden
  transition( all .5s ease )
  
  &:after
    content ''
    display block
    position absolute
    top 0
    left 0
    height 40px
    background-color $placeholder-color
    width 60%
    transition( all .5s ease )
    z-index 1
  
hr
  border none
  margin 0
  padding 10px 0
  
  //5px
  &.i-size-XS
    padding 2px 0 3px
  
  //10px
  &.i-size-S
    padding 5px 0
    
  //15px
  &.i-size-M
    padding 7px 0 8px
    
  //20px
  &
    padding 10px 0
    
  //40px
  &.i-size-L
    padding 20px 0
    
  //60px
  &.i-size-XL
    padding 30px 0

.container
  width 90% !important
  max-width 1280px
  margin 0 auto

  @media only screen and ( min-width: 601px )
    width 85% !important

  @media only screen and ( min-width: 993px )
    width 90% !important
