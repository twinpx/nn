#docs
  position relative
  
.b-docs
  position absolute
  top 0
  left 0
  width 100%
  transition( opacity .5s ease )
  opacity 0
  z-index 0
  
  &__ph
    display flex
    justify-content space-between
    align-items stretch
    flex-wrap wrap

    div
      width calc( 100% / 3 - 30px * 2 / 3 )
      height 100px
      margin-bottom 30px
      background-color $placeholder-color
      
      @media( max-width 992px )
        width calc( 100% / 2 - 30px / 2 )
        
      @media( max-width 600px )
        width 100%
        margin-bottom 30px
        
        &:nth-child(4),
        &:nth-child(5),
        &:nth-child(6)
          display none