#tabsGallery
  position relative
  
.b-tabs-gallery
  position absolute
  top 0
  left 0
  width 100%
  transition( opacity .5s ease )
  opacity 0
  z-index 0
  
  &__ph
    transition( opacity .5s ease )
    
    &__nav
      height 36px
      margin-bottom 40px
      display flex
      justify-content flex-start
      align-items center

      &:before,
      &:after
        content ''
        display block
        width 70px
        height 25px
        background-color $placeholder-color 
        margin-right 50px

    &__gallery
      display flex
      justify-content space-between
      align-items center

      div
        width 100%
        padding-top 100%
        background-color $placeholder-color 
        display none

        &:first-child
          display block

        @media(min-width 480px)
          width calc((100% - 15px) / 2)
          padding-top calc((100% - 15px) / 2)
          display none

          &:first-child,
          &:last-child
            display block

        @media(min-width 640px)
          width calc((100% - 15px * 2) / 3)
          padding-top calc((100% - 15px * 2) / 3)
          display block

          &:first-child
            display none

        @media(min-width 768px)
          width calc((100% - 15px * 3) / 4)
          padding-top calc((100% - 15px * 3) / 4)
          display block

          &:first-child,
          &:last-child
            display block
