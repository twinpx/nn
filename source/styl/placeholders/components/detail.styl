#detail
  position relative
  
.b-detail
  opacity 0
  position absolute
  top 0
  left 0
  transition( opacity .5s ease )
  width 100%
  
.b-detail-ph
  display flex
  justify-content space-between
  transition( opacity .5s ease )
  
  @media( max-width 600px )
    display block

  &__gallery
    width calc( 50% - 15px )
    
    @media( max-width 600px )
      width 100%
      margin-bottom 20px
    
    div
      padding-top 100%
      background-color $placeholder-color
  
  &__text
    width calc( (50% / 6) * 5 - 15px )
    
    @media( max-width 600px )
      width 100%
    
    div
      height 7px
      background-color $placeholder-color
      margin-bottom 15px
      
      &:last-child
        width 70%