#actions
  position relative
  
.b-actions
  position absolute
  top 0
  left 0
  width 100%
  transition( opacity .5s ease )
  opacity 0
  z-index 0
  
  &__ph
    padding-top 20px //row
    transition( opacity .5s ease )
    margin 0 -15px
    display flex
    justify-content space-around
    
    @media( max-width 600px )
      margin 0
      display block
      padding-top 0 // row
    
    &__item
      width calc( 100% / 3 - 30px )
      margin 0 15px
      
      @media( max-width 600px )
        width 100%
        margin 0 0 40px
      
    &__img
      background-color $placeholder-color
      padding-top 80%
      margin-bottom 20px
      
    &__text
      margin-bottom 20px
      
      div
        height 7px
        background-color $placeholder-color
        margin-bottom 15px
        
        &:last-child
          width 70%