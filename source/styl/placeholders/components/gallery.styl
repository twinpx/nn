#bigGalley
  position relative
  
.b-big-galley
  position absolute
  top 0
  left 0
  width 100%
  transition( opacity .5s ease )
  opacity 0
  z-index 0
  
  &__ph
    transition( opacity .5s ease )
    padding-top 75%
    background-color $placeholder-color

  img
    width 100%
    height auto
    vertical-align top
    
  &__hover,
  &__hint,
  &__popup
    position absolute
    top 0
    left 0
