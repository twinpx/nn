#planText
  position relative
  
.b-plan-text
  position absolute
  top 0
  left 0
  width 100%
  opacity 0
  transition( opacity .5s ease )
  z-index 0
  
.b-plan-text-ph
  display flex
  justify-content space-between
  transition( opacity .5s ease )
  
  @media( max-width 600px )
    display block
    
  &__col
    width calc( 50% - 15px )
    
    @media( max-width 600px )
      width 100%
      margin-bottom 20px
    
    div
      padding-top 100%
      background-color $placeholder-color
  
  &__text
    width calc( 50% - 15px )
    
    @media( max-width 600px )
      width 100%
    
    div
      height 7px
      background-color $placeholder-color
      margin-bottom 15px
      
      &:last-child
        width 70%
        