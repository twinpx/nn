#buildings
  position relative
  
.b-buildings
  position absolute
  top 0
  left 0
  width calc( 100% + 30px )
  opacity 0
  transition( opacity .5s ease )
  z-index 0
  
.b-buildings__ph
  display flex
  flex-wrap wrap
  justify-content center
  align-content center
  margin 0 -15px
  padding-bottom 30px
  transition( opacity .5s ease )

  &__item
    width calc( 100%/3 - 30px )
    padding-top 20%
    position relative
    margin 0 15px 30px
    background-color $placeholder-color
    border-bottom 4px solid $placeholder-color
    box-sizing content-box
        
  @media( max-width 600px )
    display block
    margin 0
    padding 0
    background none !important
    
    &__item
      display block
      width 100%
      padding-top 70%
      margin 0 0 15px
      
  @media( min-width 601px ) and ( max-width 992px )
    
    &__item
      width calc( 100%/2 - 30px )
      padding-top 35%