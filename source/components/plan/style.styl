@import '../../styl/component-include.styl'

#planYmap
  height 500px

.i-ph-animated

  .b-plan
    position static
    width auto
    opacity 1
    
  .b-plan__ph
    position absolute
    top 0
    left 0
    width 100%
    opacity 0
    z-index -1
    
.b-plan
  
  &__legend
    display flex
    justify-content space-between
    
    &-item
      display flex
      align-items center
      
      i
        display inline-block
        width 20px
        height 20px
        margin-right 7px
          
      span
        display inline-block
          
      @media( max-width 992px )
        
        i
          width 15px
          height 15px
          
        span
          font-size 12px
          
    @media( max-width 600px )
      flex-wrap wrap
      justify-content flex-start
      
      &-item
        margin 0 10px 3px 0
  
.b-placemark-icon
  width 32px
  height 32px
  color #fff
  font-size 10px
  text-align center
  box-sizing border-box
  padding-top 10px
  margin -16px 0 0 -16px
  border-radius 50%
  
  &.i-infrastructure
    background-repeat no-repeat
    background-position center
    background-size cover
    display none
    
    .i-show-infrastructure &
      display block
  
