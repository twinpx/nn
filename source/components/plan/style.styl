.b-balloon
  background-color #fff
  box-shadow -5px -5px 20px rgba( 0,0,0,.2 )
  padding 15px
  width 250px
  position relative
  padding-left 80px
  box-sizing border-box
  font-size 16px
  
  &.i-infrastructure
    padding 15px 30px 15px 45px
    text-align center
  
  &__close
    width 10px
    height 10px
    position absolute
    top 10px
    right 14px
    cursor pointer
    
    &:before
      content ''
      display block
      border-right 1px solid #999
      width 0
      height 10px
      transform( rotate(45deg))
      position absolute
      top 0
      right 4px
    
    &:after
      content ''
      display block
      border-right 1px solid #999
      width 0
      height 10px
      transform( rotate(-45deg))
      position absolute
      top 0
      right 4px
      
  &__name
    font-weight bold
    font-size 20px
    text-align center
    width 80px
    position absolute
    top 13px
    left 0
    
  &__icon
    width 30px
    height 30px
    position absolute
    top 10px
    left 15px
    background-repeat no-repeat
    background-position center
    background-size contain
      
  &__heading
    font-weight bold
    font-size 16px
    margin-bottom 15px
    
    .b-balloon.i-infrastructure &
      margin-bottom 0
      
  &__props
    font-size 16px
    margin-bottom 15px
      
  &__button
    
    a
      display inline-block
      vertical-align top
      color #fff
      text-transform uppercase
      text-align center
      line-height 30px
      font-size 10px
      padding 0 20px
      
