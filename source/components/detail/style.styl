@import '../../styl/component-include.styl'

    
.i-ph-animated

  .b-detail-ph
    position absolute
    top 0
    left 0
    opacity 0
    width 100%
    z-index 0
    
  .b-detail
    opacity 1
    position static
    
.b-detail
  
  &__button
    display flex
    justify-content flex-start
    align-items center
    
    .b-button
      margin-right 30px
      
    @media( max-width 600px )
      display block
      text-align center
      
      .b-button
        margin-right 0
        
  .b-fotorama .fotorama__arr
    width 64px
    height 64px
    margin-top -32px
    
    @media( max-width 992px )
      width 32px
      height 32px
      margin-top -16px
  
    &.fotorama__arr--prev
      background url( './images/gallery-left-arrow.svg' ) no-repeat center
      background-size cover
  
    &.fotorama__arr--next
      background url( './images/gallery-right-arrow.svg' ) no-repeat center
      background-size cover
    
.b-h-num
    
  s
    font-size 12pt
    margin-top 7px
    color $text-lightcolor
    
    & ~ .b-h-num__num
      color #0033cc
  
  &__num
    font-size 26pt
    font-weight 300
    white-space nowrap
    line-height 1.4
    
@media print
  
  .sidenav-overlay,
  .drag-target,
  .b-detail-ph
    display none
    
  hr.i-size-XL
    display none

  .row
    margin 0 !important
    padding 0
  
  #advantages,
  #buildings
    display none !important
    
  .b-detail
    color #000
  
    hr
      padding 0
  
    .row
      margin 0 !important
      padding 0
    
      .col
        float none
        clear both
        padding 0 !important
        
        &.l6.m12.s12,
        &.s3,
        &.xl6.l12.m12.s12
          width auto
          
    .b-h6,
    .b-h-num__num
      color #000
      font-size 16px
      font-weight normal
      display inline
      
    .b-h6:after
      content ':'
      display inline
      
    .b-h-num s,
    .b-h-num s ~ .b-h-num__num
      color #000
      
    .b-fotorama
      margin-bottom 50px
            
    .fotorama__nav-wrap,
    .fotorama__arr,
    .fotorama__video-close,
    .b-button,
    hr.i-size-L ~ .b-h6,
    .b-detail__button,
    p
      display none
      
    .fotorama__stage
      width auto !important
      height 350px !important
      
    .fotorama__stage__shaft
      display flex
      justify-content space-between
      width auto !important
      
    .fotorama__stage__frame
      text-align center
      position static !important
      padding-right 30px
      
      &:last-of-type
        padding-right 0
      
      img
        width auto
        max-width 100%
        max-width 350px

.modal img
  max-width 100%
  max-height 100%

.modal
  width 80% !important
  height 90% !important
  max-height 90% !important
  top 5% !important
  background-color #fff !important

  &-content
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    text-align center
    z-index 10

      
      