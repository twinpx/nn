@import '../../styl/component-include.styl'

@keyframes impression-preloader
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)
 
.i-ph-animated 

  .b-gallery__ph
    opacity 0
    position absolute
    width 100%
    top 0
    left 0
    z-index 0
      
  .b-top-gallery
    position relative
    visibility visible
    opacity 1

.b-top-gallery

  .col
    position relative
    
    &:nth-of-type(1)
      padding-right 0
    
    &:nth-of-type(2)
      padding-left 0
      
    @media( max-width 767px )
      padding-right 0 !important
      padding-left 0 !important
      
  .fotorama__nav--dots
    display none
      
  .b-fotorama__gallery
    border-bottom 4px solid $brand-color
    
  .fotorama__stage__frame
    overflow visible
    
  .b-fotorama__image-bg
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    //opacity: 0;
    transition( opacity .5s ease )
    z-index: 1
    
  /*.b-fotorama__container.i-load .b-fotorama__image-bg
    opacity 1*/
    
  .b-fotorama__sticky-content
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    
  .b-fotorama__height
    width 200px
    height calc( 100% - 156px - 70px )

  .b-fotorama__text
    pointer-events none
    width 70%
    color #fff
    text-align left
    position sticky
    bottom calc( 50% - 50px - 20px - 20px )
    margin-left 8%
    z-index 2
    
    .b-button
      padding 0 60px
      pointer-events auto
      
      @media( max-width 767px )
        display none
    
    @media( max-width 600px )
      width 84%
      
      /*.b-button
        display block
        padding 0 30px*/
    
    p
      margin 0 0 20px
      font-family $font-roboto
      font-weight 300
      font-size 40px
      line-height 1.2
      
      @media( max-width 992px )
        font-size 30px
      