@import '../../styl/component-include.styl'

.i-ph-animated
  
  .b-tabs-gallery
    position static
    width auto
    opacity 1
    
  .b-tabs-gallery__ph
    position absolute
    top 0
    left 0
    width 100%
    opacity 0
    z-index -1
    
.b-tabs-gallery
  text-align center

  .swiper-slide
    padding-top 100%
    position relative

    @media(min-width 480px)
      padding-top calc((100% - 15px) / 2)

    @media(min-width 640px)
      padding-top calc((100% - 15px * 2) / 3)

    @media(min-width 768px)
      padding-top calc((100% - 15px * 3) / 4)

    a
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 10

    img
      object-fit cover
      width 100%
      height 100%

  &__nav
    display flex
    justify-content flex-start
    align-items center
    margin 0 calc(-1 * 100% / 9 / 2) 40px
    overflow-x auto

    a
      font-size 24px
      margin-right 50px
      display inline-block
      white-space nowrap

      &:first-child
        margin-left 5%

      &:last-child
        margin-right 5%

      &.i-active
        color $brand-color
        cursor default
        pointer-events none

    @media(min-width 601px)
      overflow-x initial
      margin 0 0 40px

      a:first-child
        margin-left 0

      a:last-child
        margin-right 0

  &__arrows
    display none
    justify-content space-between
    align-items center
    width 74px
    position absolute
    top -74px
    right 0
    z-index 10

    @media(min-width 768px)
      display flex

    div
      width 32px
      height 32px
      border 2px solid #255AA7
      border-radius 50%
      display flex
      justify-content center
      align-items center
      cursor pointer

      &:after
        font-family swiper-icons
        font-size 14px
        font-weight bold
        text-transform none!important
        letter-spacing 0
        text-transform none
        font-variant initial
        color #255AA7
        line-height 1

    &-next

      &:after
        content 'next'
        margin-left 2px

    &-prev

      &:after
        content 'prev'
        margin-right 2px

  &__tab
    display none
    position relative

    &.i-active
      display block
      
  &--fullscreen
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color #fff
    z-index 100
   
    .swiper-slide
      cursor default
      background-size contain
   
    .close-button
      display block

#lightbox
	display flex
	flex-direction column-reverse

.lb-close
	position absolute
	bottom 10px
	right -50px
