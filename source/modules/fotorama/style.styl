@import '../../styl/component-include.styl'

.b-fotorama

  @media(max-width: 767px)
    margin 0 -5.5%
    width 111.1%

  &__counter-block
    position absolute
    bottom 20px
    right 25px
    width 50%
    background-color #1465C0
    padding 20px 15px 15px 25px
    color #fff
    z-index 10

    &__title
      font-size 24px
      line-height 1.2
      margin-bottom 10px
      text-align left

    &__row
      display flex
      justify-content space-between
      align-items center

    .b-button
      width 200px
      border-radius 0

    .countdown
    
      &-block
        display flex
        justify-content space-between
        align-items center
        padding-bottom 10px

      &-item
        font-size 24px
        font-weight bold
        text-align center
        position relative

      &-text
        font-weight 400
        font-size 13px
        text-align center
        position absolute
        bottom -10px
        left 50%
        -webkit-transform translateX(-50%)
        transform translateX(-50%)
        z-index 10

      span
        margin 0 15px
        font-size 12px

    @media(max-width: 767px)
      width 100%
      left 0
      bottom 0
      right auto
      top auto
      padding 27px 15px 15px
      min-height 226px

      & + .b-fotorama__container
      
        .b-fotorama__image-bg,
        .b-fotorama__image
          height calc(100% - 226px)


      &__title
        font-size 16px
        margin-bottom 27px

      &__row
        display block

      .countdown
        max-width 160px
        margin 0 auto 27px

      .b-button
        width 100%
        display block


  .fotorama__arr
    margin-top -25px
    
    #process &
      margin-top -40px
    
    &.fotorama__arr--prev
      background url( 'images/left-arrow.svg' ) no-repeat center
      background-size cover
      width 50px
      height 50px
      margin-left 10px
      
    &.fotorama__arr--next
      background url( 'images/right-arrow.svg' ) no-repeat center
      background-size cover
      width 50px
      height 50px
      margin-right 10px
        
    @media( max-width 767px )
      display none !important
      
  &.i-blue-arrows
  
    .fotorama__arr
    
      &.fotorama__arr--prev
        background-image url( 'images/left-arrow-dark.svg' )
        
      &.fotorama__arr--next
        background-image url( 'images/right-arrow-dark.svg' )
        
  .fotorama__nav-wrap
      position relative
      
  .fotorama__nav
    position absolute
    bottom 40px
    left 0
    width 100%
    height 30px
    
    @media( max-width 767px )
      bottom 10px
    
  .fotorama__nav--dots .fotorama__nav__frame
    height 0px
    
  .fotorama__dot
    width 0
    height 0
    border-width 5px
    
  .fotorama__nav__frame.fotorama__active .fotorama__dot
    width 0
    height 0
    border-width 5px
    border-color $brand-color-2
      
  &__frame
    position relative
    height 100%

    &:before
      content ''
      display block
      background url("images/preloader.svg") no-repeat center
      width 50px
      height 50px
      position absolute
      top 50%
      left 50%
      margin -25px 0 0 -25px
      animation: impression-preloader 1s linear infinite

  &__container
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    color #fff

  &__container.i-show .b-fotorama__image,
  &__container.i-show .container
    opacity 1

@media (max-width:1024px) {
	.b-fotorama__sticky-content {
		text-align: center
	}
	.b-fotorama__sticky-content p {
		margin-right: auto;
		margin-left: auto
	}
}

.b-fotorama__sticky-content p,
.b-fotorama__sticky-content .b-h1,
.b-fotorama__sticky-content .b-fotorama__text-note
	opacity 0
	transition( all 1s ease)

.b-fotorama__sticky-content.i-load .b-h1,
.b-fotorama__sticky-content.i-load p,
.b-fotorama__sticky-content.i-load .b-fotorama__text-note
	opacity 1

.b-fotorama__sticky-content .container {
	text-align: center;
	opacity: 0;
	transition: opacity .5s ease;
	-webkit-transition: opacity .5s ease;
	-moz-transition: opacity .5s ease;
	-ms-transition: opacity .5s ease;
	pointer-events: none;
	z-index: 2
}

.b-fotorama__sticky-content .btn
	opacity 0
	transition( opacity .5s ease )

.b-fotorama__sticky-content:hover .btn {
	opacity: 1
}

.b-fotorama__image {
	display: flex;
  justify-content: center;
  align-items: center;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	opacity: 0;
	transition( opacity .5s ease )
	z-index: 1
  
  .i-contain & {
    background-size: contain;
  }
  
  img {
    max-height 100%
    max-width 100%
    width auto
    height auto
  }

  @media( min-width: 1024px ) {
    &.modal-trigger {
      cursor pointer
    }
  }
}

.b-fotorama__cover {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.4);
	z-index: 2
}

.b-fotorama__note {
	color: #fff;
	font-size: 7pt;
	text-align: center;
	position: relative;
}

.b-fotorama__note margin,
.b-fotorama__note p {
	margin: 0;
	padding: 0 20px;
	position: absolute;
	bottom: 30px;
	left: 0;
	width: 100%;
	z-index: 3
}

@keyframes impression-preloader {
	0% {
		transform( rotate(0))
	}
	50% {
		transform( rotate(180deg))
	}
	100% {
		transform( rotate(360deg))
	}
}