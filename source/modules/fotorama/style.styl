@import '../../styl/component-include.styl'

.b-fotorama

  .fotorama__arr
    margin-top -25px
    
    #process &
      margin-top -40px
    
    &.fotorama__arr--prev
      background url( 'images/left-arrow.svg' ) no-repeat center
      background-size cover
      width 50px
      height 50px
      margin-left 10px
      
    &.fotorama__arr--next
      background url( 'images/right-arrow.svg' ) no-repeat center
      background-size cover
      width 50px
      height 50px
      margin-right 10px
        
    @media( max-width 767px )
      display none !important
      
  &.i-blue-arrows
  
    .fotorama__arr
    
      &.fotorama__arr--prev
        background-image url( 'images/left-arrow-dark.svg' )
        
      &.fotorama__arr--next
        background-image url( 'images/right-arrow-dark.svg' )
        
  .fotorama__nav-wrap
      position relative
      
  .fotorama__nav
    position absolute
    bottom 40px
    left 0
    width 100%
    height 30px
    
    @media( max-width 767px )
      bottom 10px
    
  .fotorama__nav--dots .fotorama__nav__frame
    height 0px
    
  .fotorama__dot
    width 0
    height 0
    border-width 5px
    
  .fotorama__nav__frame.fotorama__active .fotorama__dot
    width 0
    height 0
    border-width 5px
    border-color $brand-color-2
      
  &__frame
    position relative
    height 100%

    &:before
      content ''
      display block
      background url("images/preloader.svg") no-repeat center
      width 50px
      height 50px
      position absolute
      top 50%
      left 50%
      margin -25px 0 0 -25px
      animation: impression-preloader 1s linear infinite

  &__container
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    color #fff

  &__container.i-show .b-fotorama__image,
  &__container.i-show .container
    opacity 1

@media (max-width:1024px) {
	.b-fotorama__sticky-content {
		text-align: center
	}
	.b-fotorama__sticky-content p {
		margin-right: auto;
		margin-left: auto
	}
}

