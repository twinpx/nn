.b-fotorama__sticky-content p,
.b-fotorama__sticky-content .b-h1,
.b-fotorama__sticky-content .b-fotorama__text-note
	opacity 0
	transition( all 1s ease)

.b-fotorama__sticky-content.i-load .b-h1,
.b-fotorama__sticky-content.i-load p,
.b-fotorama__sticky-content.i-load .b-fotorama__text-note
	opacity 1
	//transform( translateY(0))

.b-fotorama__sticky-content .container {
	text-align: center;
	opacity: 0;
	transition: opacity .5s ease;
	-webkit-transition: opacity .5s ease;
	-moz-transition: opacity .5s ease;
	-ms-transition: opacity .5s ease;
	pointer-events: none;
	z-index: 2
}

.b-fotorama__sticky-content .btn
	opacity 0
	transition( opacity .5s ease )

.b-fotorama__sticky-content:hover .btn {
	opacity: 1
}

.b-fotorama__image {
	display: flex;
  justify-content: center;
  align-items: center;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	opacity: 0;
	transition( opacity .5s ease )
	z-index: 1
  
  .i-contain & {
    background-size: contain;
  }
  
  img {
    max-height 100%
    max-width 100%
    width auto
    height auto
  }

  @media( min-width: 1024px ) {
    &.modal-trigger {
      cursor pointer
    }
  }
}

.b-fotorama__cover {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.4);
	z-index: 2
}

.b-fotorama__note {
	color: #fff;
	font-size: 7pt;
	text-align: center;
	position: relative;
}

.b-fotorama__note margin,
.b-fotorama__note p {
	margin: 0;
	padding: 0 20px;
	position: absolute;
	bottom: 30px;
	left: 0;
	width: 100%;
	z-index: 3
}

@keyframes impression-preloader {
	0% {
		transform( rotate(0))
	}
	50% {
		transform( rotate(180deg))
	}
	100% {
		transform( rotate(360deg))
	}
}