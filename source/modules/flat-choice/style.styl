@import '../../styl/component-include.styl'

.b-flat-choice
  position relative
  /*opacity 0
  transform( translateY( 150px ))
  transition( all .5s ease )
  
  .i-scroll-animated &
    opacity 1
    transform( translateY(0))*/
  
  &__bg
    width 100%
    height auto
    
  &__flats
    position absolute
    top 70px
    right 50px
    background-color #fff
    border 4px solid $brand-color
    padding 20px
    max-width 450px
    width calc( 100% - 50px * 2 )
    opacity 0
    transform( scale(.9))
    transition( all .5s ease )
    
    &.i-show
      opacity 1
      transform( scale(1))
      
    
    @media( max-width 992px )
      top 20px
      left 20px
    
    h3
      margin 0 0 10px
    
    th,
    td
      border-bottom 1px solid $brand-color
      
    th
      padding 5px
      color $text-lightcolor
      font-size 9.5pt
      font-weight normal
      
      &:last-child
        padding-right 0
      
    td
      padding 10px 5px
      
      &:last-child
        padding-right 0

