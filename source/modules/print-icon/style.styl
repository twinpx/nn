@import '../../styl/component-include.styl'

.b-print-icon
  display block
  font-size 8pt
  cursor pointer
  display flex
  align-items center
  text-align right
  
  i
    display block
    width 32px
    height 32px
    background-repeat no-repat
    background-position center
    background-size cover
    margin 0 5px 0 20px
    
  .b-heading-icon &
    margin-left 20px
  
  .b-heading-icon h1 ~ &
    margin-top 23px
    
  @media( max-width 600px )
    display none
    
  @media print
    display none